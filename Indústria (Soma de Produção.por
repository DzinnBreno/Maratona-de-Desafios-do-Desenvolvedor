programa {
  funcao inicio() {
    real producaoDia,somaRd

    somaRd = 0

  faca{
  escreva("Digite a produção do dia ou (Digite 0 para encerrar): R$ ")
  leia(producaoDia)

  se(producaoDia!=0)
  somaRd = somaRd+producaoDia
  
  }enquanto(producaoDia!=0)


 

  escreva("A soma referente aos dias de produção foi de: R$ ", somaRd  )



  }
}
